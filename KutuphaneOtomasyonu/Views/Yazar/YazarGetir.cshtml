@model KutuphaneOtomasyonu.Models.Entity.Yazar
@{
    ViewBag.Title = "YazarGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<title>KÜTÜPHANE OTOMASYON SİSTEMİ</title>
@using (Html.BeginForm("YazarGüncelle", "Yazar", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Id</label>
            @Html.TextBoxFor(y => y.Id, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Ad</label>
            @Html.TextBoxFor(y => y.Ad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Soyad</label>
            @Html.TextBoxFor(y => y.Soyad, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Hakkında</label>
            @Html.TextAreaFor(y => y.Hakkında, new { @class = "form-control" })
        </div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

