
@{
    ViewBag.Title = "Galeri";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>KÜTÜPHANE OTOMASYON SİSTEMİ</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

    <div class="container">
        <h2>Kütüphane Galeri</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:400px; height:200px;">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>

            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="~/web2/Galeri/kütüphane-fotoğrafı.jpg" alt="Los Angeles" style="width:100%;" />
                </div>

                <div class="item">
                    <img src="~/web2/Galeri/istockphoto-837180456-170667a.jpg" alt="Los Angeles" style="width:100%;" />
                </div>

                <div class="item">
                    <img src="~/web2/Galeri/reinhard-gorner-009.jpg" alt="Los Angeles" style="width:100%;" />
                </div>

                <div class="item">
                    <img src="~/web2/Galeri/unnamed.jpg" alt="Los Angeles" style="width:100%;" />
                </div>

            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

</body>
</html>
